<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    />
    <title><%= subject %></title>
  </head>
  <body>
    <div class="container mt-2">
      <header>
        <h2>Welcome</h2>
        <p>Here is the homepage for <%= name %></p>
      </header>
      <table>
        <tr>
            <td>Перевод</td>
            <td>Tadoushi</td>
            <td>Jidoushi</td>
        </tr>
        <% for(var i=0; i < rows.length; i++) { %>
            <tr>
                <td><div><%= rows[i].translation %></div></td>
                <td>
                    <button id="tashow<%= i %>" value="Show" onClick="document.getElementById('tadoushi<%= i %>').style.display='block';
                     document.getElementById('tashow<%= i %>').style.display='none'">Show</button>
                    <div id="tadoushi<%= i %>" style="display:none">
                        <%= rows[i].tadoushi %>
                    </div>
                </td>
                <td>
                    <button id="jishow<%= i %>" value="Show" onClick="document.getElementById('jidoushi<%= i %>').style.display='block';
                                         document.getElementById('jishow<%= i %>').style.display='none'">Show</button>
                    <div id="jidoushi<%= i %>" style="display:none">
                        <%= rows[i].jidoushi %>
                    </div>
                </td>
            </tr>
        <% } %>
      </section>
    </div>
  </body>
</html>
